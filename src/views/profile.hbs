
<style>
.cards {
  display: flex;
  flex-wrap: wrap;
}

.card {
  flex: 1 0 20%;
  position: relative;
  margin: .5em;
  padding: 1em;
  background: white;
  border: 1px solid grey;
}

</style>

<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Actualizar información</h3>
        </div>
          <form action="/profile/{{user.id}}" method="POST">
            <div class="form-group">
              <input type="type" name="fullname" value="{{user.fullname}}" placeholder="Nombre completo" class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <input type="text" name="username" value="{{user.username}}" placeholder="Usuario" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="password" id="password" name="password" placeholder="Contraseña" class="form-control" required>
              <input type="checkbox" onclick="passVi()"> Mostrar Contraseña
            </div>
            <div class="form-group">
              </br>
              <button class="btn btn-success btn-block">
                Guardar cambios
              </button>
              <a href="/interviews/all" class="btn btn-danger btn-block">Cancelar</a>
            </div>       
           
          </form>
        </div>
      </div>
    </div>
  </div>

<script>
function passVi() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
